networks:
  invoice-trackr-network:
    driver: bridge

services:
  frontend:
    build:
      context: ./client/ # This sets the context correctly to "client"
      dockerfile: Dockerfile.frontend # Refers to Dockerfile.frontend under "client"
    ports:
      - "3001:3001" # Ensure the correct port mapping
    networks:
      - invoice-trackr-network
    depends_on:
      - backend

  backend:
    build:
      context: .
      dockerfile: Dockerfile.backend
    ports:
      - "3000:3000"
    networks:
      - invoice-trackr-network
    depends_on:
      - db
    environment:
      - DATABASE_URL=postgresql://user:password@db:5432/mydatabase?schema=public
    command: "npm run seed && npm run start"

  db:
    image: postgres:13
    ports:
      - "5432:5432"
    networks:
      - invoice-trackr-network
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
      POSTGRES_DB: mydatabase